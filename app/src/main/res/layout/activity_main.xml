<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    android:layoutDirection="ltr"

    tools:context="com.example.android.courtconter.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/backround"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/Bright"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center_horizontal"
                    android:padding="12dp"
                    android:text="Shahar"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/team_shahar_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center_horizontal"
                    android:paddingBottom="7dp"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="56sp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/upAndDown"
                    android:layout_marginLeft="@dimen/side"
                    android:layout_marginRight="@dimen/side"
                    android:layout_marginTop="@dimen/upAndDown"
                    android:onClick="pointsUpShahar"
                    android:text="@string/right"
                    android:textColor="@color/white" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/upAndDown"
                    android:layout_marginLeft="@dimen/side"
                    android:layout_marginRight="@dimen/side"
                    android:layout_marginTop="@dimen/upAndDown"
                    android:onClick="pointsDownShahar"
                    android:text="@string/wrong"
                    android:textColor="@color/white" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/upAndDown"
                    android:layout_marginLeft="@dimen/side"
                    android:layout_marginRight="@dimen/side"
                    android:layout_marginTop="@dimen/upAndDown"
                    android:onClick="pointsBonusShahar"
                    android:text="@string/bonus"
                    android:textColor="@color/white" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:padding="@dimen/cool"
                    android:src="@drawable/shahar1"


                    />

            </LinearLayout>

            <TextView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/Bright" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/backround"
                android:orientation="vertical"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/Bright"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center_horizontal"
                    android:padding="12dp"
                    android:text="Shira"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/team_shira_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center_horizontal"
                    android:paddingBottom="7dp"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="56sp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/upAndDown"
                    android:layout_marginLeft="@dimen/side"
                    android:layout_marginRight="@dimen/side"
                    android:layout_marginTop="@dimen/upAndDown"
                    android:onClick="pointsUpShira"
                    android:text="@string/right"
                    android:textColor="@color/white" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/upAndDown"
                    android:layout_marginLeft="@dimen/side"
                    android:layout_marginRight="@dimen/side"
                    android:layout_marginTop="@dimen/upAndDown"
                    android:onClick="pointsDownShira"
                    android:text="@string/wrong"
                    android:textColor="@color/white" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/upAndDown"
                    android:layout_marginLeft="@dimen/side"
                    android:layout_marginRight="@dimen/side"
                    android:layout_marginTop="@dimen/upAndDown"
                    android:onClick="pointsBonusShira"
                    android:text="@string/bonus"
                    android:textColor="@color/white" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="220dp"
                    android:padding="@dimen/cool"
                    android:src="@drawable/shira1" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/winner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text=""
            android:textColor="@color/colorPrimaryDark"
            android:textSize="100sp" />

        <Button
            android:id="@+id/reset_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:onClick="resetButton"
            android:text="reset"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/winner_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:onClick="winnerButton"
            android:text="Winner"
            android:textColor="@color/white" />

    </RelativeLayout>
</ScrollView>
